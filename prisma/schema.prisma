// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  clerkUserId  String   @unique
  name         String?
  createdAt    DateTime @default(now())
  
  attempts      UserQuestionAttempt[]
  summaries     UserSubjectSummary[]
  feedbacks     Feedback[]
  issues        Issue[]
  contributions Contribution[]
}

model Subject {
  id        String    @id @default(cuid())
  name      String
  slug      String    @unique
  isActive  Boolean   @default(true)
  
  questions     Question[]
  attempts      UserQuestionAttempt[]
  summaries     UserSubjectSummary[]
  contributions Contribution[]
}

model Question {
  id         String     @id @default(cuid())
  subjectId  String
  difficulty Difficulty
  isActive   Boolean    @default(true)
  
  subject    Subject   @relation(fields: [subjectId], references: [id])
  attempts   UserQuestionAttempt[]
}

model UserQuestionAttempt {
  id            String    @id @default(cuid())
  userId        String
  questionId    String
  subjectId     String
  verdict       Verdict
  attemptedAt   DateTime  @default(now())
  cooldownUntil DateTime?
  failureCount  Int       @default(0)
  
  user          User      @relation(fields: [userId], references: [id])
  question      Question  @relation(fields: [questionId], references: [id])
  subject       Subject   @relation(fields: [subjectId], references: [id])
  
  @@unique([userId, questionId])
  @@index([userId, subjectId])
}

model UserSubjectSummary {
  id           String    @id @default(cuid())
  userId       String
  subjectId    String
  solvedCount  Int       @default(0)
  failedCount  Int       @default(0)
  lastActivity DateTime?
  
  user         User    @relation(fields: [userId], references: [id])
  subject      Subject @relation(fields: [subjectId], references: [id])
  
  @@unique([userId, subjectId])
}

model Feedback {
  id          String   @id @default(cuid())
  userId      String
  username    String
  feedback    String
  createdAt   DateTime @default(now())
  
  user        User     @relation(fields: [userId], references: [id])
  
  @@index([userId])
}

model Issue {
  id          String     @id @default(cuid())
  userId      String
  username    String
  issueType   IssueType
  description String?
  createdAt   DateTime   @default(now())
  
  user        User       @relation(fields: [userId], references: [id])
  
  @@index([userId])
}

model Contribution {
  id          String             @id @default(cuid())
  userId      String
  username    String
  fullName    String
  subjectId   String
  link        String
  status      ContributionStatus @default(PENDING)
  createdAt   DateTime           @default(now())
  
  user        User               @relation(fields: [userId], references: [id])
  subject     Subject            @relation(fields: [subjectId], references: [id])
  
  @@index([userId])
  @@index([subjectId])
  @@index([status])
}

enum Verdict {
  PASS
  WEAK
  FAIL
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}

enum IssueType {
  TECHNICAL_BUG
  QUESTION_ERROR
  UI_UX_PROBLEM
  EVALUATION_ISSUE
  OTHER
}

enum ContributionStatus {
  PENDING
  ACCEPTED
  NEEDS_REVISION
}